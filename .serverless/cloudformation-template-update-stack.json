    "CreatePostLambdaVersionOFjnv7w8I4kIGXZ0tcfhe1wgqnJZRWdL7T4JmB0syQ": {
      "Type": "AWS::Lambda::Version",
      "DeletionPolicy": "Retain",
      "Properties": {
        "FunctionName": {
          "Ref": "CreatePostLambdaFunction"
